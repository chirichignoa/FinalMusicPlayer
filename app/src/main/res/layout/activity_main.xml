<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chiri.finalmusicplayer.MainActivity"
    tools:ignore="GradleDependency">


    <ImageView
        android:id="@+id/albumImage"
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/artistName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_album" />

    <TextView
        android:id="@+id/songName"
        android:layout_width="133dp"
        android:layout_height="26dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/song_name_example"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/albumImage"
        app:layout_constraintRight_toLeftOf="@+id/libraryButton"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/song_name_example" />

    <TextView
        android:id="@+id/artistName"
        android:layout_width="133dp"
        android:layout_height="23dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="9dp"
        android:text="@string/artist_name_example"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/albumImage"
        app:layout_constraintRight_toLeftOf="@+id/libraryButton"
        app:layout_constraintTop_toBottomOf="@+id/songName"
        tools:text="@string/artist_name_example" />

    <ListView
        android:id="@+id/playlistView"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginBottom="127dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:divider="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/libraryButton"
        app:layout_constraintVertical_bias="0.363" />

    <ImageButton
        android:id="@+id/previousSongButton"
        android:layout_width="47dp"
        android:layout_height="43dp"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="76dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/ic_action_playback_prev" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="47dp"
        android:layout_height="43dp"
        android:layout_marginBottom="34dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_play_arrow" />

    <ImageButton
        android:id="@+id/nextSongButton"
        android:layout_width="47dp"
        android:layout_height="43dp"
        android:layout_marginBottom="34dp"
        android:layout_marginRight="76dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_action_playback_next" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="277dp"
        android:layout_height="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/playButton"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/playlistView"
        app:layout_constraintVertical_bias="0.466" />

    <ImageButton
        android:id="@+id/libraryButton"
        android:layout_width="58dp"
        android:layout_height="52dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/artistName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_library_music" />

    <TextView
        android:id="@+id/currentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="@string/current_time_example"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/previousSongButton"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        tools:text="@string/current_time_example" />

    <TextView
        android:id="@+id/totalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="@string/total_time_example"
        app:layout_constraintLeft_toRightOf="@+id/nextSongButton"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        tools:text="@string/total_time_example" />

</android.support.constraint.ConstraintLayout>
